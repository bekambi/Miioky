<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    tools:context=".groups.discover.bottomsheet.fragments.BottomSheetInformationFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/members_maj"
        android:textColor="@color/caption_color"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/caption_size"
        android:textStyle="bold"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cercle_white"
        android:layout_marginTop="10dp"
        android:padding="4dp"
        android:gravity="center"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/admin_master_profile_photo"
            android:layout_width="@dimen/photo_profile_size"
            android:layout_height="@dimen/photo_profile_size"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_image2"
            android:scaleType="centerCrop"
            app:civ_border_color="@color/grey"
            app:civ_border_width="0.5dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/admin_master_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text=""
        android:textColor="@color/caption_color"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/text_size"
        />

    <RelativeLayout
        android:id="@+id/relLayout_profile_members"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:visibility="gone"
        >

