<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="210dp"
    android:layout_height="280dp"
    android:paddingTop="20dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:background="@drawable/cadre_rectangle"
    android:layout_marginTop="4dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="2dp"
    android:layout_gravity="center_horizontal"
    >

    <RelativeLayout
        android:id="@+id/relLayout"
        android:layout_width="70dp"
        android:layout_height="63dp"
        android:layout_centerHorizontal="true"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cercle_suggestions"
            android:layout_gravity="center_horizontal"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle_image2"
                android:scaleType="centerCrop"
                app:civ_border_color="@color/grey"
                app:civ_border_width="0.5dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relLayout1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/cercle_full_green"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:contentDescription="@null"
                app:srcCompat="@drawable/ic_baseline_done_24"
                app:tint="@color/white" />

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/title_add_profile_photo"
        android:textColor="@color/black"
        android:textSize="17sp"
        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/msg_add_profile_photo" />

    <TextView
        android:id="@+id/tv_add_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_blue"
        android:gravity="center"
        android:text="@string/add"
        android:textColor="@color/white" />

</RelativeLayout>