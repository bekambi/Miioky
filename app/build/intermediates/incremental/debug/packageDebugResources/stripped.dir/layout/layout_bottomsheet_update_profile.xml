<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <LinearLayout
        android:id="@+id/linLayout_view_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <View
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:background="@color/black_semi_transparent"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            />


    </LinearLayout>

    <com.bekambimouen.miiokychallenge.Utils.TouchDetectableScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/linLayout_change_profile_photo"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:background="@drawable/selector_2"
                tools:ignore="UseCompoundDrawables"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:background="@drawable/cercle_parameters">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:contentDescription="@null"
                        app:srcCompat="@drawable/icons_gallery"
                        app:tint="@color/black" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/change_profile_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/change_profile_photo"
                    android:textSize="@dimen/bottomsheet_item_txt_size"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linLayout_view_profile_picture"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:background="@drawable/selector_2"
                tools:ignore="UseCompoundDrawables">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:background="@drawable/cercle_parameters">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:padding="5dp"
                        android:background="@drawable/cercle_vide_ala_une"
                        app:srcCompat="@drawable/ic_baseline_person_add_alt_1_24"
                        app:tint="@color/black"
                        android:gravity="center"
                        android:contentDescription="@null" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/view_profile_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/view_profile_picture"
                    android:textSize="@dimen/bottomsheet_item_txt_size"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linLayout_publish_as_story"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:background="@drawable/selector_2"
                tools:ignore="UseCompoundDrawables">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:background="@drawable/cercle_parameters">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:contentDescription="@null"
                        app:srcCompat="@drawable/icons_story2"
                        app:tint="@color/black" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/publish_as_story"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/publish_as_story"
                    android:textSize="@dimen/bottomsheet_item_txt_size"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

        </LinearLayout>

    </com.bekambimouen.miiokychallenge.Utils.TouchDetectableScrollView>

</LinearLayout>