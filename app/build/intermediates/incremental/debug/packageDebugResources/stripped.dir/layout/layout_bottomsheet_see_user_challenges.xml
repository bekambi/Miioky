<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">

    <LinearLayout
        android:id="@+id/linLayout_view_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <View
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:background="@color/black_semi_transparent"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            />


    </LinearLayout>

    <com.bekambimouen.miiokychallenge.Utils.TouchDetectableScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/my_challenges"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center_vertical"
                android:text="@string/accepted_challenges"
                android:textSize="@dimen/bottomsheet_item_txt_size"
                android:textColor="@color/black"
                android:background="@drawable/selector_2"
                />

            <TextView
                android:id="@+id/my_responses"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center_vertical"
                android:text="@string/my_responses"
                android:textSize="@dimen/bottomsheet_item_txt_size"
                android:textColor="@color/black"
                android:background="@drawable/selector_2"
                />

        </LinearLayout>

    </com.bekambimouen.miiokychallenge.Utils.TouchDetectableScrollView>

</LinearLayout>